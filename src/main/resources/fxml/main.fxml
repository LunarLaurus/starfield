<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns="http://javafx.com/javafx"
	xmlns:fx="http://javafx.com/fxml"
	fx:controller="net.laurus.starfield.controller.MainFxController">

	<top>
		<VBox spacing="6" style="-fx-padding: 10;">

			<!-- Toolbar row -->
			<HBox spacing="10">
				<Button fx:id="loadButton" text="Load Stars" />

				<Label fx:id="statusLabel" text="Status"
					style="-fx-font-size: 16px;" />

				<Label text="Max Distance:" />

				<Slider fx:id="distanceSlider" min="0" max="2000"
					value="2000" blockIncrement="1" majorTickUnit="50"
					minorTickCount="5" showTickMarks="true" showTickLabels="true"
					HBox.hgrow="ALWAYS" maxWidth="Infinity" />
			</HBox>

			<!-- Grid Plane Controls -->
			<HBox spacing="20" alignment="CENTER_LEFT">

				<Label fx:id="gridPanelLabel" text="Grid Control: "
					style="-fx-font-size: 16px;" />

				<!-- XZ Plane -->
				<HBox spacing="5" alignment="CENTER">
					<CheckBox fx:id="xzPlaneCheckBox" />
					<Label text="XZ Plane" style="-fx-font-size: 14px;" />
				</HBox>

				<!-- XY Plane -->
				<HBox spacing="5" alignment="CENTER">
					<CheckBox fx:id="xyPlaneCheckBox" />
					<Label text="XY Plane" style="-fx-font-size: 14px;" />
				</HBox>

				<!-- YZ Plane -->
				<HBox spacing="5" alignment="CENTER">
					<CheckBox fx:id="yzPlaneCheckBox" />
					<Label text="YZ Plane" style="-fx-font-size: 14px;" />
				</HBox>

				<!-- Colour Scheme Selector -->
				<HBox spacing="5" alignment="CENTER">
					<Label text="Colour Scheme:" style="-fx-font-size: 14px;" />
					<ComboBox fx:id="paletteComboBox" prefWidth="150" />
				</HBox>

			</HBox>



			<!-- Info row -->
			<HBox spacing="10">
				<Label fx:id="coordsLabel" text="Coordinates X:x, Y:y, Z:z"
					style="-fx-font-size: 16px;" />

				<Label fx:id="cameraDetailsLabel" text="Camera Info: xxxxxx"
					style="-fx-font-size: 16px;" />
			</HBox>

		</VBox>
	</top>

	<center>
		<Pane fx:id="starPanel" style="-fx-background-color: black;"
			focusTraversable="true" />
	</center>


</BorderPane>
