<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="net.laurus.starfield.controller.MainFxController">

    <top>
        <HBox spacing="10" style="-fx-padding: 10;">
            <Button fx:id="loadButton" text="Load Stars"/>
            <Label fx:id="statusLabel" text="Status" style="-fx-font-size: 16px;"/>
        </HBox>
    </top>

    <center>
        <Pane fx:id="starPanel" style="-fx-background-color: black;" />
    </center>

</BorderPane>
